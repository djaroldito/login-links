<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/links/edit/{{pepe.id}}" method="post">
                        <div class="form-group">
                            <input value="{{pepe.title}}" type="text" class="form-control" name="title" placeholder="Title" autofocus>  
                        </div>
                        </br>
                        <div class="form-group">
                            <input value="{{pepe.url}}" type="url" name="url" class="form-control" placeholder="URL">
                        </div>
                        </br>
                        <div class="form-group">
                            <textarea  name="description" rows="2" class="form-control" placeholder="Description">{{pepe.description}}</textarea>
                        </div>
                        </br>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                    Save
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>